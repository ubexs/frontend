@html.extend('layouts/staff', function(model) {
  @html.block('content', function(model) {
            <div class="row">
                <div class="col-sm-12">
                    <h1 style="white-space:pre-wrap;padding-top: 1rem;" class="text-left">Hello, @model.userInfo.username</h1>
                </div>
            </div>
            @{
                // 0 = name, 1 = url, 2 = font awesome class, 3 = required permission
                model.links = [
                    [
                        'Pending items',
                        '/staff/catalog',
                        'fas fa-smile',
                        'ReviewPendingItems',
                    ],
                    [
                        'Site banner',
                        '/staff/banner',
                        'fas fa-exclamation-triangle',
                        'ManageBanner',
                    ],
                    [
                        'Support tickets',
                        '/staff/tickets',
                        'fas fa-envelope',
                        'ManageSupportTickets',
                    ],
                    [
                        'Create items',
                        '/staff/create',
                        'fas fa-hat-cowboy',
                    ],
                    [
                        'Forums',
                        '/staff/forums',
                        'fas fa-user-tie',
                        'ManageForumCategories',
                    ],
                    [
                        'Abuse reports',
                        '/staff/report-abuse/user-status',
                        'fas fa-flag',
                        'ReviewAbuseReports',
                    ],
                    [
                        'Search users',
                        '/staff/user/search',
                        'fas fa-user',
                        'ManagePublicUserInfo',
                    ],
                    [
                        'User information',
                        '/staff/user/leaderboard',
                        'fas fa-list-ol',
                        'ReviewUserInformation',
                    ],
                    [
                        'Currency products',
                        '/staff/currency-product',
                        'fas fa-money-bill-wave-alt',
                        'ManageCurrencyProducts',
                    ],
                    [
                        'Internet protocol whitelist',
                        '/staff/whitelist-ip',
                        'fas fa-tools',
                        'ManagePrivateUserInfo'
                    ]
                ].filter(val => {
                    return model.hasPerm(val[3]);
                })
            }
            <div class="row" style="margin-top:1rem;">
                @if (model.links.length === 0) {
                    <div class="col-12">
                        <p></p>
                    </div>
                }else{
                    for (const item of model.links) {
                        <div class="col-md-4 col-6" style="margin-bottom:1rem;">
                            <div class="card staff-card-index">
                                <div class="card-body">
                                    <a href="@item[1]">
                                        <h5 class="text-truncate">
                                            <i class="@item[2]"></i>
                                            <br>
                                            @item[0]
                                        </h5>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
  })
  @html.block('js', function(model) {

  })
})
